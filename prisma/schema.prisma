datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Banner {
    id          Int     @id @default(autoincrement())
    title       String
    description String
    timer       Int     // or the type you defined for the timer
    link        String
    visible     Boolean
}
